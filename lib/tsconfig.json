{
	"compilerOptions": {
    "lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"moduleResolution": "NodeNext",
		"target": "ESNext",

		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,

		"declaration": true,

		"typeRoots": ["./node_modules/@webgpu/types", "./node_modules/@types"],

		"outDir": "dist"
	},
	"include": ["./src"],
	"exclude": ["dist"]
}
